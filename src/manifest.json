{
  "manifest_version": 3,
  "name": "New Tab Emoji 🎁",
  "version": "1.1",
  "description": "Displays a random emoji every time a new tab is opened.",
  "permissions": [],
  "chrome_url_overrides": {
    "newtab": "popup/popup.html"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "128": "images/smile-128.png"
    }
  },
  "icons": {
    "16": "images/smile-16.png",
    "32": "images/smile-32.png",
    "48": "images/smile-48.png",
    "128": "images/smile-128.png"
  }
}